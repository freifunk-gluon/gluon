pipeline {
    agent { label 'gluon-docker' }
    environment {
        GLUON_SITEDIR = "contrib/ci/minimal-site"
        GLUON_TARGET = "x86-64"
        BUILD_LOG = "1"
    }
    stages {
        stage('lint') {
            steps {
                sh 'luacheck --std=min {packages,scripts,target}'
            }
        }
        stage('docs') {
            steps {
                sh' make -C docs html'
            }
        }
        stage('build') {
            steps {
                sh 'make update'
                sh 'make download'
                sh 'make -j$(nproc)'
            }
        }
    }
}
