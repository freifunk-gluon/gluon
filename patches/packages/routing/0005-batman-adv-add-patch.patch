+ 		vlan = batadv_orig_node_vlan_get(orig_node,
+ 						 ntohs(tt_vlan_tmp->vid));
+-		if (!vlan)
+-			return false;
++		if (!vlan) {
++			if (tt_vlan_tmp->crc == 0x00000000)
++				continue;
++			else
++				return false;
++		}
+ 
+ 		crc = vlan->tt.crc;
+ 		batadv_orig_node_vlan_put(vlan);
