+ struct batadv_attribute batadv_attr_##_name = {		\
+@@ -293,6 +304,52 @@ ssize_t batadv_show_##_name(struct kobject *kobj,			\
+ 	static BATADV_ATTR(_name, _mode, batadv_show_##_name,		\
