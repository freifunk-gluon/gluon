+#define GL_AR750_GPIO_LED_WLAN5G	13
+
+#define GL_AR750_GPIO_BTN_RESET		3
+#define GL_AR750_GPIO_BTN_SW1		0
+
+#define GL_AR750_GPIO_I2C_SCL		16
+#define GL_AR750_GPIO_I2C_SDA		17
+
+#define GL_AR750_GPIO_USB_POWER		2
+
