 $(STAGING_DIR)/.prepared: $(TMP_DIR)/.build
 	$(call PrepareStaging,$(STAGING_DIR))
 	mkdir -p $(BUILD_DIR)/stamp
 	touch $@
+else
+staging_prepared :=
+endif
 
