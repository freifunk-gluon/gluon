Subject: tools/Makefile: fix host tools build dependencies

diff --git a/tools/Makefile b/tools/Makefile
index 2f516d2..9416069 100644
--- a/tools/Makefile
+++ b/tools/Makefile
@@ -95,10 +95,16 @@ define PrepareStaging
 endef
 
 # preparatory work
+ifneq ($(ARCH),)
+staging_prepared = $(STAGING_DIR)/.prepared
